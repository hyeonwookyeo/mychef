<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="boardns">

	<insert id="insert" parameterType="board">
		insert into Recipe values(recipe_seq.nextval, #{category},
		#{id},#{thumbnail},#{subject},#{subject},sysdate,#{ip},
		0,0,{ingre},{rfile},{content},'y'
		)
	</insert>

	<select id="getTotal" parameterType="board" resultType="int">
		select count(*) from Recipe where state = 'y'
	</select>

	<select id="list" parameterType="board" resultType="board">
		select * from (select a.*, rownum row from (
		select * from Recipe order by rnum) a
		) where between #{startRow} and #{endRow}
	</select>

	<update id="readcountUpdate" parameterType="int">
		update Recipe set readcount = readcount+1 where rnum=#{rnum}
	</update>

	<select id="select" parameterType="int" resultType="board">
		select * from Recipe where rnum=#{rnum}
	</select>

	<update id="update" parameterType="board">
		update Recipe set <!-- 뭐 넣지 -->
		where rnum=#{rnum}
	</update>

	<update id="delete" parameterType="int">
		update Recipe set state='n' where rnum=#{rnum}
	</update>



</mapper>