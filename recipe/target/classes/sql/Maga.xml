<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- test 테이블 연결 -->
<mapper namespace="Maga">

	<!-- 게시판 총 게시물 수 -->
	<select id="maga_count" resultType="int">
		select count(*) from maga
	</select>	
	
	<!-- 게시판 목록 -->
	<select id="maga_list" parameterType="int" resultType="maga">
		<![CDATA[
		select * from (select rownum rnum, ma.* from
		(select * from maga order by maga_num desc) ma)
		where rnum >= ((#{page}-1) * 10+1) and rnum <= (#{page} * 10)
		]]>
	</select>
</mapper>